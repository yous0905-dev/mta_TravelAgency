import { getBucketForSelector } from 'fontoxpath';
import * as slimdom from 'slimdom';
const doc = new slimdom.Document();
describe('getBucketForSelector', () => {
	it('returns the correct buckets for element selectors', () => {
		chai.assert.deepEqual(getBucketForSelector('self::element()'), ['type-1', 'name-element']);
	});
	it('returns the correct buckets for text nodes', () => {
		chai.assert.deepEqual(getBucketForSelector(doc.createTextNode('A piece of text')), ['type-3']);
	});
});
