import slimdom from 'slimdom';

import { domFacade } from 'fontoxpath';
import { evaluateXPathToString } from 'fontoxpath';

let documentNode;
beforeEach(() => {
	documentNode = slimdom.createDocument();
});

describe('cast as', () => {
	it('can cast strings to booleans', () => {
		chai.assert.equal(evaluateXPathToString('cast "true" as xs:boolean', documentNode, domFacade), 'true');
	});
});
